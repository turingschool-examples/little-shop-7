<h1>New Item</h1>

<%= form_with model: @item, url: "/merchants/#{params[:merchant_id]}/items" , method: :post, local: true do |f| %>
  <%= f.label "name" %>
  <%= f.text_field "name" %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.submit "Submit" %>
<% end %>