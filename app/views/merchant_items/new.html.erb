
<h1> Create New Item: <h1>

  <%= form_with model: [@merchant, @item], local: true, html: { id: 'New_Item' } do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :unit_price %>
  <%= f.number_field :unit_price %>

  <%= f.submit %>
<% end %>