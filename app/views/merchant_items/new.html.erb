<h1>Create A New Item</h1>

<%= form_with url: "/merchants/#{@merchant.id}/items", method: :post do |form| %>
  <p><%= form.label :name, "Name: " %>
  <%= form.text_field :name %></p>

  <p><%= form.label :description, "Description: " %>
  <%= form.text_field :description %></p>

  <p><%= form.label :unit_price, "Unit Price: " %>
  <%= form.text_field :unit_price %></p>

  <p><%= form.submit "Submit"%></p>
<% end %>
