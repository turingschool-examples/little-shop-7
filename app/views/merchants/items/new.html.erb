<section id="header"> 
  <h3 style="float:left; width:50%; text-align:left;">Merchant Items</h3>
</section>
<section id="content" style="clear:both">
  <%= form_with model: @new_merchant_item, id: "new_item_form", local: true do |form| %>
      <p>
        <%= form.label :name %>
        <%= form.text_field :name %>
        <%= form.label :description %>
        <%= form.text_field :description %>
        <%= form.label :unit_price %>
        <%= form.text_field :unit_price %>
        
        <%= form.submit value: "Submit"%>
      </p>
    <% end %>
</section>
