<h1><%= @merchant.name %></h1>

<h2><ul>
  <li><%= link_to "Items", "/merchants/#{@merchant.id}/items" %></li>
  <li><%= link_to "Invoices", "/merchants/#{@merchant.id}/invoices" %></li>
</ul></h2>

<h1>Top 5 Customers:</h1>

<h2><ul>
  <% @top_customers.each do |customer| %>
    <li><%= customer.first_name %> <%= customer.last_name %>... Successful Purchases: <%= customer.transactions_count %></li>
  <% end %>
</ul></h2>

<h1>Items Ready to Ship:</h1>
<p><ul>
  <% @not_shipped.each do |item| %>
    <li><%= item.name %>... Item's Invoice ID: <%= link_to item.invoice_id, "/merchants/#{@merchant.id}/invoices/id" %></li>
    Date Created: <%= item.created_at.strftime("%A, %B %d, %Y") %>
  <% end %>
</ul></p>