<section id="header"> 
  <h3 style="float:left; width:50%; text-align:left;">Merchant Dashboard</h3>
  <nav style="float:right; width:50%; text-align:right"> 
    <%= link_to("Items", "/merchants/#{@merchant.id}/items") %> | 
    <%= link_to("Invoices", "/merchants/#{@merchant.id}/invoices") %>
  </nav>
</section>

<div id="top_5_customers" style="float:right; width:50%; padding:20px;">
  <h2>Top 5 Customers</h2>
<ul>
  <% @merchant.top_five_customers.each do |top| %>
    <li>
      <%= top.first_name %>
      <span class="transaction-count">(<%= top.transaction_count %> Transactions)</span>
    </li>
  <% end %>
</ul>
</div>

<div id="items_ready_to_ship" style="float:left; width:50%; padding:20px;">
  <h2>Items Ready To Ship</h2>
<% if @merchant.pending_items.present? %>
  <div id="item">
  <ul>
      <% @merchant.pending_items.each do |item| %>
      <li>
          <%= item.name %>
          <%= link_to "Invoice #{item.invoices.first.id}", "/merchants/#{@merchant.id}/invoices/#{item.invoices.first.id}" %>
      </li>
  <% end %>
  </ul>
  <% else %>
    <p>No items</p>
  </div>
<% end %>
</div>

