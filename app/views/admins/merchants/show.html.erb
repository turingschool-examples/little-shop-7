<section id="header"> 
  <h3 style="float:left; width:50%; text-align:left;">Admin Dashboard</h3>
</section>
<section id="content" style="clear:both">
  <div id="merchant_info" style="width:100%; padding:20px;">
    <h4 style="text-align: center; background-color: #eee; padding: 10px; height: 100%"><%= @merchant.name %></h4>
    <% if flash[:notice].present? %>
      <div class="flash-notice">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <p><%= link_to "Update Merchant", edit_admins_merchant_path %></p>
  </div>
</section>