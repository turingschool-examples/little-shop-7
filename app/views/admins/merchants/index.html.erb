<section id="header"> 
  <h3 style="float:left; width:50%; text-align:left;">Admin Dashboard</h3>
</section>
<section id="content" style="clear:both">
  <div>
    <%= link_to "New Merchant", "#{new_admin_merchant_path}" %>
  </div>
  <div id="merchant_list" style="float:left; width:50%; padding:20px;">
    <h2>Merchant List</h2>
    <h4>Enabled Merchants</h4>
    <ol id = "enabled_merchants">
      <% @merchants.each do |merchant| %>
        <% if merchant.status == true %>
          <li>
            <%= link_to "#{merchant.name}", admin_merchant_path(merchant.id) %><%= button_to merchant.status ? "Disable" : "Enable", toggle_status_admin_merchant_path(merchant.id), method: :patch, id: "#{merchant.id}_button" %>
          </li>
        <% end %>
      <% end %>
    </ol>
    <h4>Disabled Merchants</h4>
    <ol id = "disabled_merchants">
      <% @merchants.each do |merchant| %>
        <% if merchant.status == false %>
          <li>
            <%= link_to "#{merchant.name}", admin_merchant_path(merchant.id) %><%= button_to merchant.status ? "Disable" : "Enable", toggle_status_admin_merchant_path(merchant.id), method: :patch, id: "#{merchant.id}_button" %>
          </li>
        <% end %>
      <% end %>
    </ol>
  </div>

  <div id="top_merchants" style="float:right; width:50%; padding:20px;">
    <h2>Top Merchants</h2>
    <% @top_merchants.each do |merchant| %>
  <ol>
    <li>
      <%= link_to merchant.name, admin_merchant_path(merchant) %>
      â€” <%= number_to_currency(merchant.revenue, unit: '$') %> in sales
      <br>
        Top selling date for <%= merchant.name%> was <%=merchant.top_selling_date%>
      
    </li>
  </ol>
<% end %>
  </div>
</section>