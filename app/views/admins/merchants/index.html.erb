<section id="header"> 
  <h3 style="float:left; width:50%; text-align:left;">Admin Dashboard</h3>
</section>
<section id="content" style="clear:both">
  <div id="merchant_list" style="float:left; width:50%; padding:20px;">
    <h4>Merchant List</h4>
    <ol>
      <% @merchants.each do |merchant| %>
        <li><%= link_to "#{merchant.name}", admins_merchant_path(merchant.id) %><%= button_to merchant.status ? "Disable" : "Enable", toggle_status_admins_merchant_path(merchant.id), method: :patch, id: "#{merchant.id}_button", local: true %>
        </li>
      <% end %>
    </ol>
  </div>
</section>